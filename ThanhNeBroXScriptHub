-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Key cần nhập
local requiredKey = "ThanhNeBro"  -- <-- Chỉnh key ở đây

-- Tạo GUI nhập key
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KeyInputGui"
ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0,400,0,200)
Frame.Position = UDim2.new(0.5,-200,0.4,0)
Frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
Frame.Parent = ScreenGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Size = UDim2.new(1,0,0,50)
TextLabel.Position = UDim2.new(0,0,0,10)
TextLabel.BackgroundTransparency = 1
TextLabel.TextColor3 = Color3.fromRGB(255,255,255)
TextLabel.TextScaled = true
TextLabel.Text = "ThanhNeBro X ScriptHub Key"
TextLabel.Parent = Frame

local TextBox = Instance.new("TextBox")
TextBox.Size = UDim2.new(1,-20,0,50)
TextBox.Position = UDim2.new(0,10,0,70)
TextBox.BackgroundColor3 = Color3.fromRGB(50,50,50)
TextBox.TextColor3 = Color3.fromRGB(255,255,255)
TextBox.PlaceholderText = "Type key here..."
TextBox.Text = ""
TextBox.Parent = Frame

local ValidateButton = Instance.new("TextButton")
ValidateButton.Size = UDim2.new(0,100,0,40)
ValidateButton.Position = UDim2.new(0.5,-50,1,-50)
ValidateButton.Text = "Check"
ValidateButton.BackgroundColor3 = Color3.fromRGB(70,70,70)
ValidateButton.TextColor3 = Color3.fromRGB(255,255,255)
ValidateButton.Parent = Frame

-- Callback Validate Key
ValidateButton.MouseButton1Click:Connect(function()
    local keyInputValue = TextBox.Text
    if keyInputValue == "" then
        warn("Please enter a key first!")
        return
    end
    if keyInputValue ~= requiredKey then
        warn("Key incorrect! Try again.")
        return
    end

    -- Nếu key đúng, hiển thị fake loader
    local LoaderGui = Instance.new("ScreenGui")
    LoaderGui.Name = "FakeLoaderGui"
    LoaderGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

    local Bg = Instance.new("Frame")
    Bg.Size = UDim2.new(1,0,1,0)
    Bg.BackgroundColor3 = Color3.fromRGB(0,0,0)
    Bg.BackgroundTransparency = 0.5
    Bg.Parent = LoaderGui

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(0,400,0,80)
    Title.Position = UDim2.new(0.5,-200,0.4,0)
    Title.BackgroundColor3 = Color3.fromRGB(0,0,0)
    Title.BorderSizePixel = 0
    Title.TextColor3 = Color3.fromRGB(255,255,255)
    Title.TextScaled = true
    Title.Font = Enum.Font.GothamBold
    Title.Text = "ThanhNeBro X ScriptHub"
    Title.Parent = LoaderGui

    local LoadingText = Instance.new("TextLabel")
    LoadingText.Size = UDim2.new(0,300,0,40)
    LoadingText.Position = UDim2.new(0.5,-150,0.55,0)
    LoadingText.BackgroundTransparency = 1
    LoadingText.TextColor3 = Color3.fromRGB(255,255,255)
    LoadingText.TextScaled = true
    LoadingText.Font = Enum.Font.Gotham
    LoadingText.Text = "Loading..."
    LoadingText.Parent = LoaderGui

    -- Fake progress chậm
    for i=1,100 do
        LoadingText.Text = "Loading... "..i.."%"
        task.wait(0.3)  -- load lâu hơn
    end

    -- Xong fake loader
    LoaderGui:Destroy()
    ScreenGui:Destroy()  -- Ẩn GUI nhập key

    -- Load script riêng của bạn (URL hoặc code nội bộ)
    local myScriptUrl = "https://raw.githubusercontent.com/scripthubekitten/SCRIPTHUBV3/main/SCRIPTHUBV3.lua" -- <-- đổi URL
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/scripthubekitten/SCRIPTHUBV3/main/SCRIPTHUBV3", true))()
    end)
    if success then
        print("script executed successfully!")
    else
        warn("Failed to execute script: "..tostring(err))
    end
end)
