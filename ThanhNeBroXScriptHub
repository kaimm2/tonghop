-- Services
local Players = game:GetService("Players")

local requiredKey = "ThanhNeBro"

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KeyInputGui"
ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 400, 0, 220)
Frame.Position = UDim2.new(0.5, -200, 0.4, 0)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 0
Frame.ClipsDescendants = true
Frame.Parent = ScreenGui
Frame.AnchorPoint = Vector2.new(0.5,0.5)

local UIStroke = Instance.new("UIStroke")
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(100, 100, 255)
UIStroke.Transparency = 0.5
UIStroke.Parent = Frame

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 60)
Title.Position = UDim2.new(0, 0, 0, 10)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBold
Title.Text = "ThanhNeBro X ScriptHub"
Title.Parent = Frame

local SubTitle = Instance.new("TextLabel")
SubTitle.Size = UDim2.new(1,0,0,25)
SubTitle.Position = UDim2.new(0,0,0,65)
SubTitle.BackgroundTransparency = 1
SubTitle.TextColor3 = Color3.fromRGB(150, 150, 255)
SubTitle.TextScaled = true
SubTitle.Font = Enum.Font.Gotham
SubTitle.Text = "Developed by ThanhNeBro"
SubTitle.Parent = Frame

local TextBox = Instance.new("TextBox)
TextBox.Size = UDim2.new(0.9, 0, 0, 50)
TextBox.Position = UDim2.new(0.05, 0, 0, 95)
TextBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
TextBox.BorderSizePixel = 0
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
TextBox.PlaceholderText = "Enter your key..."
TextBox.TextScaled = true
TextBox.ClearTextOnFocus = false
TextBox.Parent = Frame

local TextStroke = Instance.new("UIStroke")
TextStroke.Thickness = 1.5
TextStroke.Color = Color3.fromRGB(120, 120, 255)
TextStroke.Transparency = 0.5
TextStroke.Parent = TextBox

local ValidateButton = Instance.new("TextButton")
ValidateButton.Size = UDim2.new(0.5, 0, 0, 50)
ValidateButton.Position = UDim2.new(0.25, 0, 0, 160)
ValidateButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
ValidateButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ValidateButton.Font = Enum.Font.GothamBold
ValidateButton.TextScaled = true
ValidateButton.Text = "Check Key"
ValidateButton.BorderSizePixel = 0
ValidateButton.Parent = Frame

ValidateButton.MouseEnter:Connect(function()
    ValidateButton.BackgroundColor3 = Color3.fromRGB(90, 90, 255)
end)
ValidateButton.MouseLeave:Connect(function()
    ValidateButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
end)

-- Callback Validate Key
ValidateButton.MouseButton1Click:Connect(function()
    local keyInputValue = TextBox.Text
    if keyInputValue == "" then
        warn("Please enter a key first!")
        return
    end
    if keyInputValue ~= requiredKey then
        warn("Key incorrect! Try again.")
        return
    end

    local LoaderGui = Instance.new("ScreenGui")
    LoaderGui.Name = "FakeLoaderGui"
    LoaderGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

    local Bg = Instance.new("Frame")
    Bg.Size = UDim2.new(1,0,1,0)
    Bg.BackgroundColor3 = Color3.fromRGB(0,0,0)
    Bg.BackgroundTransparency = 0.6
    Bg.Parent = LoaderGui

    local LoadTitle = Instance.new("TextLabel")
    LoadTitle.Size = UDim2.new(0, 400, 0, 60)
    LoadTitle.Position = UDim2.new(0.5,-200,0.35,0)
    LoadTitle.BackgroundTransparency = 1
    LoadTitle.TextColor3 = Color3.fromRGB(255,255,255)
    LoadTitle.TextScaled = true
    LoadTitle.Font = Enum.Font.GothamBold
    LoadTitle.Text = "ThanhNeBro X ScriptHub"
    LoadTitle.Parent = LoaderGui

    local SubLoader = Instance.new("TextLabel")
    SubLoader.Size = UDim2.new(0, 400, 0, 30)
    SubLoader.Position = UDim2.new(0.5,-200,0.45,0)
    SubLoader.BackgroundTransparency = 1
    SubLoader.TextColor3 = Color3.fromRGB(150, 150, 255)
    SubLoader.TextScaled = true
    SubLoader.Font = Enum.Font.Gotham
    SubLoader.Text = "Developed by ThanhNeBro"
    SubLoader.Parent = LoaderGui

    local LoadingText = Instance.new("TextLabel")
    LoadingText.Size = UDim2.new(0,300,0,40)
    LoadingText.Position = UDim2.new(0.5,-150,0.55,0)
    LoadingText.BackgroundTransparency = 1
    LoadingText.TextColor3 = Color3.fromRGB(255,255,255)
    LoadingText.TextScaled = true
    LoadingText.Font = Enum.Font.Gotham
    LoadingText.Text = "Loading..."
    LoadingText.Parent = LoaderGui

    for i=1,100 do
        LoadingText.Text = "Loading... "..i.."%"
        task.wait(0.1) 
    end

    LoadingText.Text = "Checking server..."
    for i=1,100 do
        LoadingText.Text = "Checking server... "..i.."%"
        task.wait(0.1)  -- 0 chấm 1 giây
    end

    LoaderGui:Destroy()
    ScreenGui:Destroy()

    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/scripthubekitten/SCRIPTHUBV3/main/SCRIPTHUBV3", true))()
    end)
    if success then
        print("Script executed successfully!")
    else
        warn("Failed to execute script: "..tostring(err))
    end
end)
